body {
  position: absolute;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.wrapper-view {
  width: 100%;
  height: 100%;
}

.login-wrapper {
  width: 100%;
  height: 100%;
}

.login-box {
  width: 360px;
  margin: auto;
  padding-top: 14%;
}

.login-box-body .row .col-xs-8 {
  margin-top: 7px;
  a {
    cursor: pointer;
  }
}

.landing {
  background-image: url("../assets/background.jpg");
}

.image-container {
  width: calc(100% - 460px);
  height: 100%;
  margin: auto;
}

.chain-options {
  margin-right: 3px;
  margin-top: 3px;
}

.chain-close {
  float: right;
  margin-right: 3px;
  margin-top: 3px;
}

.right-menu {
  height: 100%;
}

.image-process-box {
  width: 100%;
  height: 100%;
  overflow: scroll;
}

.image-box {
  white-space: pre-line;
  overflow-y: hidden;
  position: relative;
}
